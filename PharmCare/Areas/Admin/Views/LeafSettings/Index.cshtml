@model IEnumerable<PharmCare.DTO.LeafSettingModule.LeafSettingDTO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link href="~/css/style.css" rel="stylesheet" />

<div class=" x_panel">
    <div class="col-md-10 my-auto">
        <h4 class="header">
            Manage Leaf Settings
        </h4>
        <p>
            <span class="text-primary">Home</span> <span> <i class="fa fa-angle-double-right"></i> </span>  <span>Leaf Settings</span>
        </p>

    </div>

    <div class="col-md-2 py-2 my-auto">

        <div class="col-md-12 text-center text-bold">
            <a class="pull-right" href="#" data-toggle="modal" data-target="#ModalCreateLeafSetting" data-backdrop="static" data-keyboard="false">
                <span class="m-0 p-0 text-dark"><i class="fa fa-2x fa-plus" aria-hidden="true"></i></span>
                <h6 class="">
                    Add Leaf Setting
                </h6>
            </a>
        </div>
    </div>
</div>


<div class="">
    <div class="x_panel">
        <div class="x_title">
            <div class="row">
                <div class="col-md-4">
                    <h6 class="Header"><i class="fa fa-building"></i>List of Leaf Settings</h6>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">


            <div class="">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <table id="tblCategories" class="table table-striped table-bordered dt-responsive nowrap table-sm" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th scope="col">No</th>
                                        <th scope="col">Leaf Type</th>
                                        <th scope="col">Total Number Per Box</th>
                                        <th scope="col">Entry Date</th>
                                        <th scope="col">Options</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @if (Model != null && Model.Count() > 0)
                                    {
                                        int count = 1;
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@count</td>

                                                <td>@item.LeafType</td>

                                                <td>@item.TotalNumberPerBox</td>

                                                <td>@item.CreateDate.ToShortDateString()</td>
                                                <td>
                                                    <a class=" btn-success  btn-sm" href="#" onclick="GetRecord('@item.Id')" value=""><i class="fa fa-edit"> Edit</i></a>

                                                    <a class=" btn-danger  btn-sm" href="#" onclick="DeleteRecord('@item.Id')" value=""><i class="fa fa-trash"> Delete</i></a>

                                                </td>
                                            </tr>

                                            count++;
                                        }
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="ModalCreateLeafSetting" tabindex="-1" role="dialog" aria-labelledby="ModalCreateLeafSetting" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title Header" id="ModalCreateLeafSetting">
                    Add Leaf Setting
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmAddLeafSetting">

                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="exampleInputEmail1"> Leaf Type</label>
                            <input type="text" class="form-control myinputs" id="txtLeafType" name="LeafType" aria-describedby="emailHelp">
                        </div>
                    </div>        
                    
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="exampleInputEmail1"> Total Number Per Box</label>
                            <input type="text" class="form-control myinputs" id="txtTotalNumberPerBox" name="TotalNumberPerBox" aria-describedby="emailHelp">
                        </div>
                    </div>


                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="button" id="btnSubmit" class="btn btn-success">Submit</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="ModalUpdateLeafSetting" tabindex="-1" role="dialog" aria-labelledby="ModalUpdateLeafSetting" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title Header" id="ModalUpdateLeafSetting">
                    Update Leaf Setting
                    Details
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form id="frmUpdateLeafSetting">
                    <input type="hidden" name="Id" id="txtId" />


                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="exampleInputEmail1"> Leaf Type</label>
                            <input type="text" class="form-control myinputs" id="txtLeafType1" name="LeafType" aria-describedby="emailHelp">
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="exampleInputEmail1"> Total Number Per Box</label>
                            <input type="text" class="form-control myinputs" id="txtTotalNumberPerBox1" name="TotalNumberPerBox" aria-describedby="emailHelp">
                        </div>
                    </div>


                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="button" id="btnUpdate" class="btn btn-success">Submit</button>
            </div>
        </div>
    </div>
</div>




<div id="divLoader" style="display:none;" class="loader">

    <img src="~/loaders/loading-23.gif" alt="Loader" style="width:20em;" />

</div>



<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/PharmCareJs/leafSetting.js"></script>

<script>
    $(document).ready(function () {
        $('#tblCategories').DataTable();

    });
</script>


