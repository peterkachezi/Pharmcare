                <div class="col-sm-12">
                    <div class="card-box table-responsive">


                        <table id="tblMedicine" class="table table-striped table-bordered dt-responsive nowrap table-sm" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th scope="col">No</th>
                                    <th scope="col"> Name</th>
                                    <th scope="col">Category</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Shelf </th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Options</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Count() > 0)
                                {
                                    int count = 1;
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@count</td>

                                            <td>@item.Name</td>
                                            <td>@item.CategoryName</td>
                                            <td>@item.Quantity</td>
                                            <td>@item.ShelfName</td>
                                            <td>

                                                @{
                                                    var status = item.Status;

                                                    if (status == 1)
                                                    {
                                                        <span class="act">Active</span>
                                                    }
                                                    if (status == 0)
                                                    {
                                                        <span class="ina">inactive</span>
                                                    }
                                                }

                                            </td>

                                            <td>
                                                <a class="btn-info  btn-sm" href="#" onclick="GetMedForStock('@item.Id')" value=""><i class="fa fa-edit"> Edit Stock</i></a>

                                                <a class="btn-danger  btn-sm" href="#" onclick="DeleteStockEntry('@item.StockId')" value=""><i class="fa fa-trash"> Delete</i></a>
                                            </td>
                                        </tr>
                                        count++;
                                    }
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
