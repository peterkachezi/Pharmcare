@model IEnumerable<PharmCare.DTO.PatientModule.PatientDTO>
@{
	ViewBag.Title = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link href="~/css/style.css" rel="stylesheet" />


<div class="x_panel shadow p-3  rounded" style="height: 5rem; background-color: #2a3f54;">
	<div class="col-md-10 my-auto">
		<h4 class="top-banner-header">
			Patients
		</h4>
		<p class="text-primary">
			<span>Home</span> <span> <i class="fa fa-angle-double-right"></i> </span>  <span>Patients</span>
		</p>

	</div>

	<div class="col-md-2 my-auto">
		<div class="col-md-12 text-center text-bold">
			<a class="pull-right" href="#" data-toggle="modal" data-target="#ModalCreatePatient" data-backdrop="static" data-keyboard="false">
				<span class="m-0 p-0 top-banner-add"><i class="fa fa-2x fa-plus-circle" aria-hidden="true"></i></span>
				<h6 class="top-banner-add">Add Patient</h6>
			</a>
		</div>
	</div>

</div>



<div class="x_panel shadow p-3 mb-5 bg-white rounded">
	<div class="x_title">
		<div class="row">
			<div class="col-md-4">
				<h6 class="Header"><i class="fa fa-building"></i>List of Patients</h6>
			</div>
		</div>
		<div class="clearfix"></div>
	</div>
	<div class="x_content">

		<div class="row">
			<div class="col-sm-12">
				<div class="card-box table-responsive">
					<table id="tblPatient" class="table table-striped table-bordered dt-responsive nowrap table-sm" cellspacing="0" width="100%">
						<thead>
							<tr>
								<th scope="col">No</th>
								<th scope="col">Patient No.</th>
								<th scope="col">Full Name</th>
								<th scope="col">Phone Number</th>
								<th scope="col">D.O.B</th>
								<th scope="col">Age</th>
								<th scope="col">Height</th>
								<th scope="col">Weight</th>
								<th scope="col">Residence</th>
								<th scope="col">County</th>
								<th scope="col">Sub County</th>
								<th scope="col">Entry Date</th>
								<th scope="col">Options</th>
							</tr>
						</thead>
						<tbody id="tblFilterPatient">

							@if (Model != null && Model.Count() > 0)
							{
								int count = 1;
								@foreach (var item in Model)
								{
									<tr>
										<td>@count</td>

										<td>@item.PatientNumber</td>

										<td>@item.FullName</td>

										<td>@item.PhoneNumber</td>

										<td>@item.DateOfBirth.ToShortDateString()</td>

										<td>@item.Age</td>

										<td>@item.Height</td>

										<td>@item.Weight</td>

										<td>@item.Residence</td>

										<td>@item.CountyName</td>

										<td>@item.SubCountyName</td>

										<td>@item.CreateDate.ToShortDateString()</td>

										<td>
											<a class=" btn-success  btn-sm" href="#" onclick="GetRecord('@item.Id')" value=""><i class="fa fa-edit"> Edit</i></a>


											<a class=" btn-danger  btn-sm" href="#" onclick="DeleteRecord('@item.Id')" value=""><i class="fa fa-trash"> Delete</i></a>

										</td>
									</tr>

									count++;
								}
							}
						</tbody>
					</table>

				</div>
			</div>
		</div>
	</div>

</div>




<div class="modal fade" id="ModalCreatePatient" tabindex="-1" role="dialog" aria-labelledby="ModalCreatePatient" aria-hidden="true">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title Header" id="ModalCreatePatient">Add Patient</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">

				<form id="frmAddPatients">

					<div class="col-md-6">
						<div class="form-group">
							<label for="exampleInputEmail1">First Name</label>
							<input type="text" class="form-control myinputs" id="txtFirstName" name="FirstName" aria-describedby="emailHelp">
						</div>
					</div>

					<div class="col-md-6">
						<div class="form-group">
							<label for="exampleInputEmail1">Last Name</label>
							<input type="text" class="form-control myinputs" id="txtLastName" name="LastName" aria-describedby="emailHelp">
						</div>
					</div>

					<div class="col-md-6">
						<div class="form-group">
							<label for="exampleInputEmail1">Phone Number</label>
							<input type="text" class="form-control myinputs numericOnly" id="txtPhoneNumber" name="PhoneNumber" aria-describedby="emailHelp">
						</div>
					</div>

					<div class="col-md-6">
						<div class="form-group">
							<label for="exampleInputEmail1">Date of Birth</label>
							<input type="date" class="form-control myinputs " id="txtDateOfBirth" name="DateOfBirth" aria-describedby="emailHelp">
						</div>
					</div>

					<div class="col-md-6">
						<div class="form-group">
							<label for="exampleInputEmail1">ID No</label>
							<input type="text" class="form-control myinputs " id="txtIDNumber" name="IDNumber" aria-describedby="emailHelp">
						</div>
					</div>


					<div class="col-md-6">
						<div class="form-group">
							<label for="exampleInputEmail1">NHIF No</label>
							<input type="text" class="form-control myinputs " id="txtNHIFNo" name="NHIFNo" aria-describedby="emailHelp">
						</div>
					</div>


					<div class="col-md-6">
						<div class="form-group">
							<label for="exampleInputEmail1">Select County</label>
							<select class="form-control myinputs" id="txtCountyId" name="CountyId" onchange="GetSubCounties()">

								<option value="" selected disabled hidden>Select County...</option>
								@if (ViewBag.Counties != null)
								{
									foreach (var item in ViewBag.Counties)
									{
										<option value="@item.Id">@item.Name</option>
									}
								}
							</select>
						</div>
					</div>

		
					<div class="col-md-6">
						<div class="form-group">
							<label for="exampleInputEmail1">Select Sub County</label>
							<select class="form-control myinputs" id="subCountyDropdown" name="SubCountyId"></select>
						</div>
					</div>


					<div class="col-md-12">
						<div class="form-group">
							<label for="exampleInputEmail1">Residence</label>
							<input type="text" class="form-control myinputs " id="txtResidence" name="Residence" aria-describedby="emailHelp">
						</div>
					</div>

					<div class="col-md-4">
						<div class="form-group">
							<label for="exampleInputEmail1">Gender</label>
							<select class="form-control myinputs" name="Gender" id="txtGender">
								<option value="" selected disabled hidden>Select Here</option>
								<option value="Male">Male</option>
								<option value="Female">Female</option>
							</select>
						</div>
					</div>


					<div class="col-md-4">
						<div class="form-group">
							<label for="exampleInputEmail1">Height</label>
							<input type="text" class="form-control myinputs " id="txtHeight" name="Height" aria-describedby="emailHelp">
						</div>
					</div>

					<div class="col-md-4">
						<div class="form-group">
							<label for="exampleInputEmail1">Weight</label>
							<input type="text" class="form-control myinputs " id="txtHeight" name="Weight" aria-describedby="emailHelp">
						</div>
					</div>


				</form>
			</div>

			<div class="modal-footer">
				<button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
				<button type="button" id="btnSubmitPatient" class="btn btn-success">Submit</button>
			</div>
		</div>
	</div>
</div>
