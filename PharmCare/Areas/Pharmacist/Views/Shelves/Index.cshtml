@model IEnumerable<PharmCare.DTO.ShelfModule.ShelfDTO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Pharmacist/Views/Shared/_Layout.cshtml";
}
<link href="~/css/style.css" rel="stylesheet" />



<div class="x_panel shadow p-3  rounded" style="height: 5rem; background-color: #2a3f54;">
    <div class="col-md-10 my-auto">
        <h4 class="top-banner-header">
            Shelves
        </h4>
        <p class="text-primary">
            <span>Home</span> <span> <i class="fa fa-angle-double-right"></i> </span>  <span>Shelves</span>
        </p>

    </div>

    <div class="col-md-2 my-auto">
        <div class="col-md-12 text-center text-bold">
            <a class="pull-right" href="#" data-toggle="modal" data-target="#ModalCreateShelf" data-backdrop="static" data-keyboard="false">
                <span class="m-0 p-0 top-banner-add"><i class="fa fa-2x fa-plus-circle" aria-hidden="true"></i></span>
                @*                <h6 class="top-banner-add">Add Manufacturer</h6>
                *@
            </a>
        </div>
    </div>

</div>


<div class="x_panel shadow p-3 mb-5 bg-white rounded">

        <div class="x_title">
            <div class="row">
                <div class="col-md-4">
                    <h6 class="Header"><i class="fa fa-building"></i>List of Shelves</h6>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">


            <div class="">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <table id="tblShelves" class="table table-striped table-bordered dt-responsive nowrap table-sm" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th scope="col">No</th>
                                        <th scope="col">Name.</th>
                                        <th scope="col">Entry Date</th>
                      @*                  <th scope="col">Options</th>*@
                                    </tr>
                                </thead>
                                <tbody>

                                    @if (Model != null && Model.Count() > 0)
                                    {
                                        int count = 1;
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@count</td>

                                                <td>@item.Name</td>


                                                <td>@item.CreateDate.ToShortDateString()</td>
                              @*                  <td>
                                                    <a class=" btn-success  btn-sm" href="#" onclick="GetRecord('@item.Id')" value=""><i class="fa fa-edit"> Edit</i></a>

                                                    <a class=" btn-danger  btn-sm" href="#" onclick="DeleteRecord('@item.Id')" value=""><i class="fa fa-trash"> Delete</i></a>

                                                </td>*@
                                            </tr>

                                            count++;
                                        }
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



<div class="modal fade" id="ModalCreateShelf" tabindex="-1" role="dialog" aria-labelledby="ModalCreateShelfLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title Header" id="ModalCreateShelfLabel">Add Shelf</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmCreateShelf">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="exampleInputEmail1"> Name</label>
                            <input type="text" class="form-control myinputs" id="txName" name="Name" aria-describedby="emailHelp">
                        </div>
                    </div>

                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="button" id="btnSubmit" class="btn btn-success">Submit</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="ModalUpdateShelf" tabindex="-1" role="dialog" aria-labelledby="ModalUpdateShelfLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title Header" id="ModalCreateShelf">Update Shelf Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form id="frmUpdateShelf">
                    <input type="hidden" name="Id" id="txtId" />
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Name</label>
                            <input type="text" class="form-control myinputs" id="txtName1" name="Name" aria-describedby="emailHelp">
                        </div>
                    </div>

                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="button" id="btnUpdate" class="btn btn-success">Submit</button>
            </div>
        </div>
    </div>
</div>




<div id="divLoader" style="display:none;" class="loader">

    <img src="~/loaders/loading-23.gif" alt="Loader" style="width:20em;" />

</div>



<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/PharmCareJs/shelves.js"></script>

<script>
    $(document).ready(function () {
        $('#tblShelves').DataTable();

    });
</script>


